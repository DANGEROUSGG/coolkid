-- Create the ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "MyGUI"
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create the Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 200)  -- Size of the frame (width, height)
frame.Position = UDim2.new(0.5, -150, 0.5, -100)  -- Position the frame at the center of the screen
frame.BackgroundColor3 = Color3.fromRGB(0, 255, 0)  -- Green background color
frame.Parent = screenGui
